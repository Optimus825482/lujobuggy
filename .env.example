# ============================================
# BUGGY SHUTTLE - Environment Variables
# Copy this file to .env and fill in the values
# ============================================

# PostgreSQL Database
# For Docker: postgresql://postgres:postgres@db:5432/buggy_shuttle
# For local: postgresql://postgres:password@localhost:5432/buggy_shuttle
DATABASE_URL="postgresql://postgres:postgres@db:5432/buggy_shuttle"

# PostgreSQL credentials (for docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=buggy_shuttle

# Traccar GPS Server
TRACCAR_URL="https://traccar.example.com"
TRACCAR_USER="admin"
TRACCAR_PASSWORD="admin"

# App Settings
PUBLIC_APP_NAME="Lujo Buggy Shuttle"
PUBLIC_MAP_CENTER_LAT="37.1385641"
PUBLIC_MAP_CENTER_LNG="27.5607023"
PUBLIC_MAP_ZOOM="17"

# Geofence Settings
GEOFENCE_DEFAULT_RADIUS="15"
GPS_UPDATE_INTERVAL="10000"
